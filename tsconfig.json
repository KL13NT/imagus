{
	"extends": "plasmo/templates/tsconfig.base",
	"exclude": ["node_modules"],
	"include": [".plasmo/**/*", "./**/*.ts", "./**/*.tsx"],
	"typeAcquisition": {
		"include": ["firefox-webext-browser"]
	},
	"compilerOptions": {
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"jsx": "preserve",
		"strictNullChecks": true,
		"paths": {
			"~*": ["./*"]
		},
		"baseUrl": ".",
		"isolatedModules": false
	}
}
